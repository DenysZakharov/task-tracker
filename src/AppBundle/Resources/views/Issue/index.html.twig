{% extends '::base.html.twig' %}

{% block content %}
    <div class="panel panel-primary">
        <div class="panel-heading">{{ "issue.page.list"|trans }}</div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>{{ 'issue.grid.code'|trans }}</th>
                <th>{{ 'issue.grid.type'|trans }}</th>
                <th>{{ 'issue.grid.summary'|trans }}</th>
                <th>{{ 'issue.grid.status'|trans }}</th>
                <th>{{ 'issue.grid.assignee'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('issue_show', { 'issue': entity.code }) }}">{{ entity.code|default('undefined') }}</a></td>
                    <td>{{ entity.type }}</td>
                    <td>{{ entity.summary }}</td>
                    <td>{{ entity.status }}</td>
                    <td><a href="{{ path('user_show', { 'user': entity.assignee }) }}">{{ entity.assignee.username }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% if is_granted('create', entity) %}
        <p>
            <a class="btn btn-primary" href="{{ path('issue_new') }}">
                {{ "issue.page.create"|trans }}
            </a>
        </p>
    {% endif %}
{% endblock %}
