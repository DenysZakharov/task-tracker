{% extends "::base.html.twig" %}

{% block content %}
    <div class="fos_user_user_show">
        <p>{{ 'user.grid.username'|trans }}: {{ user.username }}</p>

        <p>{{ 'user.grid.fullName'|trans }}: {{ user.fullName }}</p>

        <p>{{ 'user.grid.email'|trans }}: {{ user.email }}</p>

        <p>{{ 'user.grid.timezone'|trans }}: {{ user.timezone }}</p>
    </div>
    <a href="{{ path('fos_user_profile_edit') }}">{{ 'user.page.edit'|trans }}</a>
{% endblock content %}
